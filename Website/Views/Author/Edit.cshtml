
@model Website.Models.DTOs.AuthorDTOs.AuthorFormDTO

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Edit Author</h4>
        <form class="form-horizontal form-material mx-2" action="/Author/Edit" method="post">

            <input type="hidden" id="Id" name="Id" value="@Model.Id" />


            <div class="form-group">
                <label for="Name">Name</label>
                <input class="form-control" id="Name" name="Name" value="@Model.Name">
                <div class="invalid-feedback">
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>

            <div class="form-group">
                <button class="btn btn-primary">Guardar</button>
            </div>
        </form>

    </div>
</div>



