<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FullStack</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/select2.css" rel="stylesheet" />
    <link href="~/Content/select2.bootstrap.theme.css" rel="stylesheet" />
    <link href="~/Content/datatables.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Full Stack Training", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Books", "Index", "Book")</li>
                    <li>@Html.ActionLink("Publishers", "Index", "Publisher")</li>
                    <li>@Html.ActionLink("Authors", "Index", "Author")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:15px">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/select2.js"></script>
    <script src="~/Scripts/datatables.js"></script>
    <script src="~/Scripts/datatables.bootstrap.js"></script>
    <script src="~/Scripts/sweetalert.js"></script>

    <script>
        $(document).ready(function () {
            $('.select2').select2({ theme: "bootstrap" });
        });
    </script>
</body>
</html>
