@model List<Website.Models.DTOs.BookDTOs.BookGridDTO>

<div class="col-md-12">

    <div class="row">
        <div class="col-md-8">
            <h3>Books</h3>
        </div>
        <div class="col-md-4" style="text-align:right">
            <h3>
                <a class="btn btn-primary btn-lg" href="/Book/Create">Create</a>
            </h3>
        </div>
    </div>

    <hr />

    <table class="table table-striped" id="book-table">
        <thead>
            <tr>
                <th>ISBN</th>
                <th>Title</th>
                <th>Release Date</th>
                <th>Publisher</th>
                <th>Authors</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.ISBN</td>
                    <td>@book.Title</td>
                    <td>@book.ReleaseDate</td>
                    <td>@book.Publisher</td>
                    <td>
                        <ul>
                            @foreach (var author in book.Authors)
                            {
                                <li>@author</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a class="btn btn-primary" href="/Book/Edit/@book.Id">Edit</a>
                        <button class="btn btn-danger" onclick="deleteBook('@book.Id')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


@section Scripts{
    <script>

        function deleteBook(_id) {
            swal({
                title: "Wanna delete this book?",
                text: "Once deleted, you will not be able to recover this book",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            url: "/Book/Delete",
                            type: "POST",
                            data: { id: _id },
                            success: function (result) {
                                window.location.reload();
                            }
                        });
                    }
                });
        }

        $(document).ready(function () {
            $('#book-table').DataTable();
        });
    </script>
}